@model IList<Article>
<div data-role="header" data-position="fixed" data-id="fixedHeader">
    <h1>请选择类别</h1>
</div>
<div data-role="content">
    <ul data-role="listview" >
        <li data-role="list-divider">最新活动</li>
        @foreach (var item in this.Model.Where(m => m.Categroy == "活动").ToList())
        {
            <li>
                <a href="@item.Url">
                    <img src="@item.Image">
                    <h2>@item.Name</h2>
                    <p>@item.Description</p>
                </a>
            </li>
        }
        <li data-role="list-divider">品牌故事</li>
        @foreach (var item in this.Model.Where(m => m.Categroy == "品牌").ToList())
        {
            <li>
                <a href="@item.Url">
                    <img src="@item.Image">
                    <h2>@item.Name</h2>
                    <p>@item.Description</p>
                </a>
            </li>
        }
        <li data-role="list-divider">优惠信息</li>
        @foreach (var item in this.Model.Where(m => m.Categroy == "优惠").ToList())
        {
            <li>
                <a href="@item.Url">
                    <img src="@item.Image">
                    <h2>@item.Name</h2>
                    <p>@item.Description</p>
                </a>
            </li>
        }
    </ul>
</div>