@model ProductViewModel
<div data-role="header" data-position="fixed" data-id="fixedHeader">
    <a data-rel="back" data-icon="arrow-l" data-role="button" data-id="fixedButton">返回</a>
    <h1>商品详情</h1>
    <a href="/shoppingcart" data-ajax="false" data-icon="shop">
        购物袋  &nbsp; &nbsp;&nbsp;
        <span id="totalItem" class="ui-li-count" style="background: red;color: #fff;font-size: 10px;margin-top: -12px;display: inline-block;opacity: 0.55;min-width: 12px;padding: 5px 3px 0px 3px;text-align: center;white-space: nowrap;vertical-align: middle;border-radius: 10px;height: 10px;line-height: 10px;">1</span>
    </a>
</div>

<div data-role="content">
    <a data-role="button" data-icon="plus" data-mini="true" style="position:fixed; right:0px; top:210px; z-index:1000;" onclick="addCart('@this.Model.Id',1)">加入购物袋</a>
    <ul data-role="listview">
        <li>
            <div class="banner">
                <div><img src="@this.Model.Image" style="width:100%; height:120px;" /><h3 style="position:absolute; top:1px;">@this.Model.Name</h3></div>
                @foreach (var item in this.Model.ImageList)
                {
                    <div><img src="@item.Url" style="width:100%; height:120px;" /><h3 style="position:absolute; top:1px;">@item.Name</h3></div>
                }
            </div>
        </li>
        <li data-role="list-divider">商品详情</li>
        <li data-icon="false">
            <a href="@this.Model.Url">
                <img src="@this.Model.Image">
                <h2>@this.Model.Name</h2>
                <p>@this.Model.Description</p>
            </a>
        </li>
        <li data-role="list-divider">商品评论</li>
        <li>
            <a> 累计评论<span class="ui-li-count">@this.Model.CommentList.Count()</span></a>
        </li>
        @foreach (var item in this.Model.CommentList)
        {
            <li>
                <h4>@item.User</h4>
                <p>@item.Title</p>
                <p>@item.Content</p>
                <p>@item.CreatedOn.ToString("yyyy-MM-dd hh:mm:ss")</p>
            </li>
        }
    </ul>
</div>
@section scripts{
    <script src="~/js/shopping.js"></script>
}